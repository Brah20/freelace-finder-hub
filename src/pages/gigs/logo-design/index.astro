const orderSteps = [
  {
    title: "Research & Planning",
    description: "Gather inspiration and examples of logos you like. Define your brand's values, target audience, and preferred style.",
    tips: [
      "Create a mood board",
      "List competitor logos",
      "Define color preferences",
