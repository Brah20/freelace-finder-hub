---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';

const recommendedEditors = [
  {
    title: "Professional Video Editor",
    description: "High-quality video editing with cinematic effects",
    price: "Starting at $50",
    deliveryTime: "2-3 days",
    rating: 4.9,
    reviews: 1250,
    image: "https://images.unsplash.com/photo-1574717024653-61fd2cf4d44d?auto=format&fit=crop&q=80&w=800"
  },
  {
    title: "Social Media Video Editor",
    description: "Engaging content for Instagram, TikTok & YouTube",
    price: "Starting at $25",
    deliveryTime: "24 hours",
    rating: 4.8,
    reviews: 890,
    image: "https://images.unsplash.com/photo-1626814026160-2237a95fc5a0?auto=format&fit=crop&q=80&w=800"
  },
  {
    title: "Corporate Video Specialist",
    description: "Professional business videos and presentations",
    price: "Starting at $100",
    deliveryTime: "3-4 days",
    rating: 5.0,
    reviews: 450,
    image: "https://images.unsplash.com/photo-1622737133809-d95047b9e673?auto=format&fit=crop&q=80&w=800"
  }
];

const videoTools = [
  {
    name: "Adobe Premiere Pro",
    price: "$20.99/month",
    difficulty: "Advanced",
    platform: "Windows/Mac",
    pros: ["Professional-grade features", "Industry standard", "Extensive plugins"],
    cons: ["Steep learning curve", "Subscription-based", "Resource intensive"]
  },
  {
    name: "DaVinci Resolve",
    price: "Free (Pro $295)",
    difficulty: "Intermediate",
    platform: "Windows/Mac/Linux",
    pros: ["Professional color grading", "Free version available", "One-time payment for Pro"],
    cons: ["Complex interface", "Hardware demanding", "Limited templates"]
  },
  {
    name: "CapCut",
    price: "Free",
    difficulty: "Beginner",
    platform: "Mobile/Desktop",
    pros: ["Easy to use", "Great for social media", "Free templates"],
    cons: ["Limited advanced features", "Mobile-first design", "Basic export options"]
  },
  {
    name: "Filmora",
    price: "$49.99/year",
