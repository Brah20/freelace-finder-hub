    <!-- Features Section -->
    <section class="py-20 bg-dark-lighter">
      <div class="container mx-auto px-6">
        <h2 class="text-3xl md:text-4xl font-display font-bold text-center mb-12">
          Everything You Need to Succeed with Freelancers
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {[
            {
              title: "Top Fiverr Gigs & Reviews",
              description: "Discover the best services across various categories, backed by detailed reviews and real experiences.",
              icon: "â­"
            },
            {
              title: "Freelancing Guides",
              description: "Learn how to hire, manage, and collaborate with freelancers effectively through our comprehensive guides.",
              icon: "ðŸ“š"
            },
            {
              title: "Comparison Tables",
              description: "Make informed decisions with our side-by-side analysis of top-rated gigs and freelancers.",
              icon: "ðŸ“Š"
            },
            {
