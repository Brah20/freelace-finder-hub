---
const navigation = [
  { name: 'Top Fiverr Gigs', href: '/gigs' },
  { name: 'Freelancing Guides', href: '/guides' },
  { name: 'About', href: '/about' },
];
---

<header class="fixed w-full bg-dark/80 backdrop-blur-md z-50">
  <nav class="container mx-auto px-6 py-4">
    <div class="flex items-center justify-between">
      <a href="/" class="text-2xl font-display font-bold text-primary">
        Freelance Finder Hub
      </a>
      
      <div class="hidden md:flex items-center space-x-8">
        {navigation.map(item => (
          <a 
            href={item.href}
            class="text-gray-300 hover:text-primary transition-colors"
          >
            {item.name}
          </a>
        ))}
      </div>

      <button 
        class="md:hidden text-gray-300 hover:text-primary"
        aria-label="Toggle menu"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
  </nav>
</header>